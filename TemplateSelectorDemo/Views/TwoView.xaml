<UserControl
    x:Class="TemplateSelectorDemo.Views.CatBView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Background="LightCyan">
        <StackPanel Margin="10" Orientation="Vertical">
            <Image Source="https://www.petmd.com/sites/default/files/adult-homeless-cat-asking-for-food-picture-id847415388.jpg" Stretch="Uniform" />
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="25"
                Foreground="Black"
                Text="{Binding SomeMessage, FallbackValue='Some Message'}" />
        </StackPanel>
    </Grid>
</UserControl>